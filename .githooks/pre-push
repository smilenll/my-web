#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}üîç Running pre-push checks...${NC}\n"

# Run ESLint
echo -e "${YELLOW}Running ESLint...${NC}"
npm run lint
LINT_EXIT_CODE=$?

if [ $LINT_EXIT_CODE -ne 0 ]; then
  echo -e "\n${RED}‚ùå Lint failed! Please fix the errors before pushing.${NC}"
  exit 1
fi

echo -e "${GREEN}‚úì Lint passed${NC}\n"

# Run build
echo -e "${YELLOW}Building application...${NC}"
npm run build
BUILD_EXIT_CODE=$?

if [ $BUILD_EXIT_CODE -ne 0 ]; then
  echo -e "\n${RED}‚ùå Build failed! Please fix the errors before pushing.${NC}"
  exit 1
fi

echo -e "${GREEN}‚úì Build passed${NC}\n"

echo -e "${GREEN}‚úÖ All pre-push checks passed! Pushing to remote...${NC}\n"
exit 0
