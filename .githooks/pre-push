#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Allow skipping hooks with: SKIP_HOOKS=1 git push
if [ "$SKIP_HOOKS" = "1" ]; then
  echo -e "${YELLOW}‚è≠Ô∏è  Skipping pre-push checks (SKIP_HOOKS=1)${NC}\n"
  exit 0
fi

echo -e "${YELLOW}üîç Running pre-push checks...${NC}\n"

# Run ESLint (fast check)
echo -e "${YELLOW}Running ESLint...${NC}"
npm run lint
LINT_EXIT_CODE=$?

if [ $LINT_EXIT_CODE -ne 0 ]; then
  echo -e "\n${RED}‚ùå Lint failed! Please fix the errors before pushing.${NC}"
  echo -e "${YELLOW}üí° Tip: Skip with SKIP_HOOKS=1 git push (not recommended)${NC}"
  exit 1
fi

echo -e "${GREEN}‚úì Lint passed${NC}\n"

# NOTE: Build check removed to speed up push (~15-20s saved)
# CI will catch build errors automatically

echo -e "${GREEN}‚úÖ Pre-push checks passed! Pushing to remote...${NC}\n"
exit 0
