TOWBOOK_USERNAME=your_towbook_username
TOWBOOK_PASSWORD=your_towbook_password

# Authentication
# Set to 'false' to hide authentication UI in production
# NEXT_PUBLIC_ENABLE_AUTH=true

# Contact email
NEXT_PUBLIC_CONTACT_EMAIL=web@greensmil.com

# Social Links
NEXT_PUBLIC_GITHUB_URL=https://github.com/smilenll
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/smilenll

# Google reCAPTCHA v3 (score-based, invisible)
# Get your keys from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_v3_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_v3_secret_key_here

# AWS SES Email Configuration
# Note: Cannot use AWS_ prefix in Amplify (reserved by AWS)
# SES region (e.g., us-east-1, us-west-2, eu-west-1)
SES_REGION=us-east-1

# SES credentials (create IAM user with SES permissions)
SES_ACCESS_KEY_ID=your_access_key_here
SES_SECRET_ACCESS_KEY=your_secret_access_key_here

# Email addresses
# The verified sender email address in AWS SES for customer confirmations
SES_FROM_EMAIL=noreply@greensmil.com

# Email address where contact form submissions will be sent (you receive notifications here)
SES_TO_EMAIL=web@greensmil.com
